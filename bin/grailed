#!/usr/bin/env node

var program = require( 'commander' ),
	grailed = require( '../src' ),
	pkg = require( '../package' );

program
	.version( pkg.version )
	.option( '-a, --author [type]', 'Author (David Tsuji)' )
	.option( '-d, --destination [type]', 'Destination (CWD)' )
	.option( '-l, --license [type]', 'License (MIT)' )
	.option( '-m, --make', 'Automatically make the App' )
	.option( '-n, --name [type]', 'App Name (grailed)' )
	.option( '-s, --salt [type]', 'App Salt (A random hash)' )
	.parse( process.argv );

grailed( program );